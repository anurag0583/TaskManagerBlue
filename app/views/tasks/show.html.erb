<% team_members_arr = @task.project.users.to_a %>

<div class="col-lg-12">
  <div class="panel panel-info">
    <div class="panel-heading">
         <strong>Name:</strong> <%= @task.name %>
    </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <p>
            <strong>Details :</strong> <br>
            <%= @task.details %><br>
            </p>
            <p>
              <strong>Status:</strong> <%= @task.status %>
            </p>
            <p>
              <strong>Priority:</strong> <%= @task.priority %>
            </p>
            <p>
              <strong>Project name:</strong>
              <% @task_project = Project.find(@task.project_id) %>
              <%= link_to @task_project.name, project_path(@task_project) %>
            </p>
            <p>
              <strong>Created by:</strong>
              <% user =  User.find(@task.created_by_id)%>
              <%= link_to full_name(user), user_path(user) %>
            </p>
            <p>
              <%= link_to 'Download PDF',@task.document.url %>
            </p>
            <p >
              <strong>Assing To:</strong>
              <%= link_to full_name(User.find(@task.assign_task_user_id)), user_path %>
              <% if can? :update, @task %>
                <%= link_to 'Assign task', "#" ,:class=>"btn btn-xs btn-primary",:'data-toggle'=>"modal" ,:'data-target'=>"#myModal-1" %>
              <% end %>
            </p >
          </div>
          
          <div class="col-lg-6">
            <iframe src="<%= @task.document.url %>" width="100%" height="200px;"></iframe> 
          </div>
        </div>
      

