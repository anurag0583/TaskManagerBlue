<div class="row">
  <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title">Sign up</h3>
          </div>
          <div class="panel-body">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <%= f.hidden_field :plan %>
                <fieldset>
                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, class: "form-control",placeholder: "E-mail" , autocomplete: "email" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "off" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :role %><br />
                    <%#= f.select :role, Role.all.collect {|c| [ c.name, c.id ] } %>
                    <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
                  </div>
                  <div class="field">
                    <%#= f.label :billing_name, 'Name on card' %>
                    <%#= f.text_field :billing_name, placeholder: 'Benji Franklin' %>
                  </div>
                  <div class="field credit-card">
                    <label>Credit card</label>
                    <%#= f.text_field :billing_name, placeholder: 'Benji Franklin' %>
                  </div>


                  <!-- <div class="form-group">
                    <%#= f.label :role %>
                    <%#= f.select :role, Role.all.collect {|c| [ c.name, c.id ] } %>
                    <%#= f.select :role, collection: Role.all.pluck('id').to_a %>        
                  </div> -->
                  <div class="form-group">
                    <%= render "users/shared/links" %>
                  </div>
                  <%= f.submit "Sign up",:class=>"btn btn-lg btn-success btn-block" %>
                </fieldset>
              <% end %>
          </div>
      </div> 
  </div>
</div> 
