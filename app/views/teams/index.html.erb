<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-4">
          Team list
        </div>
        <div class="col-md-6">
          <%= form_tag teams_path, :method => 'get' do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :name => nil %>
            </p>
          <% end %>
        </div>
        <div class="col-md-2">
          <% if can? :create, @team %>
            <%= link_to 'Create New Team', new_team_path ,:class=>"btn btn-primary"%>
          <% end %>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="list-group">
        <% @num = 1 %>
        <% @teams.each do |team| %>
        <div  class="list-group-item row">
          <div class="col-md-1">
            <p> <%= @num %></p>
          </div>
          <div class="col-md-3">
            <a href="<%= team_path(team) %>">
              <%= team.name %>
            </a>            
          </div>
          <div class="col-md-2">
            <span class="pull-right text-muted">
              <em> Owner : <%= full_name(User.find(team.created_by_id)) %> </em>
            </span>
          </div>
          <div class="col-md-2">
            <span class="pull-right text-muted">
              <em> User count : <%= team.users.count %> </em>
            </span>
          </div>
          <div class="col-md-2">
            <span class="pull-right text-muted">
              <em><%= team.created_at.strftime("%F(%R)") %></em>
            </span>
          </div>
          <div class="col-md-1">
            <span class="pull-right text-muted">
              <em>
                <% if can? :create, team %>
                  <%= link_to( team_path(team) , html_options = {method: :delete, data: { confirm: 'Are you sure?' }}) do %>
                  <i class="fa fa-trash-o"></i>
                  <% end %>
                <% end %>
              </em>
            </span>
          </div>
        </div>
          <% @num += 1 %>
        
        <% end %>  
      </div>
    </div>
  </div>
</div>

