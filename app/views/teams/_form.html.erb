<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        List os Teams
      </div>
          <div class="panel-body">
          <%= form_with(model: team, local: true) do |form| %>
            <% if team.errors.any? %>
              <div id="error_explanation">
                <ul>
                <% team.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <fieldset>
              <div class="form-group">
                <%= form.label :name %><br />
                <%= form.text_field :name, class: "form-control",placeholder: "Enter team name here" %>
              </div>
              <div class="form-group">
                <%= form.label :department %><br />
                <%= form.select(:department, Team::DEPARTMENT, class: "form-control") %>
              </div> 
              <div class="form-group">
                <%= form.collection_select :user_ids, User.all, :id, :email , {:prompt => 'Please select team members'} , {:multiple => true}%>
              </div>             
              <div class="col-md-offset-3 col-md-6">
                <%= form.submit "Save",:class=>"btn btn-lg btn-success btn-block" %>
              </div>
            </fieldset>
          <% end %>
      </div>
    </div>
  </div>
</div>
